<div class="container mt-4">
    <div class="masonry">
        <div class="cards">
            {{#each images}}
            <div class="card">
                <a href="/images/{{_id}}">
                    <div class="card-image">
                        <img src="{{url}}" />
                    </div>
                    <div class="card-info">
                        <p>{{title}}</p>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <p class="mb-0">
                                <i class="fas fa-heart"></i>
                                <span class="likes-count"> {{likes.length}}</span>
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-eye"></i> {{views}}
                            </p>
                            <p class="mb-0">
                                <i class="far fa-comment"></i> {{comments.length}}
                            </p>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>
    </div>
</div>

